<dataset type="EDDGridFromNcFiles" datasetID="moda_npp_mo_glob" active="true">
    <reloadEveryNMinutes>10080</reloadEveryNMinutes>
    <updateEveryNMillis>10000</updateEveryNMillis>
    <fileDir>/mnt/sdc/moda_npp_mo_glob/</fileDir>
    <fileNameRegex>.*\.nc</fileNameRegex>
    <recursive>true</recursive>
    <pathRegex>.*</pathRegex>
    <metadataFrom>last</metadataFrom>
    <matchAxisNDigits>20</matchAxisNDigits>
    <fileTableInMemory>false</fileTableInMemory>
    <addAttributes>
        <att name="cdm_data_type">Grid</att>
        <att name="Contact">null</att>
        <att name="contact">Dan Otis - dotis@usf.edu</att>
        <att name="Conventions">COARDS, CF-1.6, ACDD-1.3</att>
        <att name="institution">USF IMaRS</att>
        <att name="creator_email">dotis@usf.edu</att>
        <att name="creator_name">DOTIS</att>
        <att name="creator_type">institution</att>
        <att name="infoUrl">imars.usf.edu</att>
        <att name="Imagesource">Oregon State University Productivity Lab</att>
        <att name="source_type">institution</att>
        <att name="sourceUrl">orca.science.oregonstate.edu</att>
        <att name="source_contact">Toby Westberry - westbert@oregonstate.edu</att>
        <att name="keywords">primary_productivity, vgpm, ocean_color, oceans, optical_properties, vertically_generalized_productivity_model</att>
        <att name="keywords_vocabulary">GCMD Science Keywords</att>
        <att name="Lat-Lon_Limits">null</att>
        <att name="Lat_Lon_Limits">-90N to 90N -180E to 180E</att>
        <att name="license">[standard]</att>
        <att name="standard_name_vocabulary">CF Standard Name Table v70</att>
        <att name="summary">MODIS-Aqua Global 9km Monthly Primary Productivity (OSU)</att>
        <att name="title">MODIS-Aqua Primary Productivity (VGPM) global 9km monthly composites (from Oregon State Univ. Productivity Lab)</att>
    </addAttributes>
    <axisVariable>
        <sourceName>***fileName,timeFormat=yyyyMMdd,MODA_(\d{8})_(\d{8})_MO_npp_VGPM_global_9km\.nc,2</sourceName>
        <destinationName>time</destinationName>
        <addAttributes>
            <att name="ioos_category">Unknown</att>
            <att name="units">seconds since 1970-01-01T00:00:00Z</att>
        </addAttributes>
    </axisVariable>
    <axisVariable>
        <sourceName>latitude</sourceName>
        <destinationName>latitude</destinationName>
    </axisVariable>
    <axisVariable>
        <sourceName>longitude</sourceName>
        <destinationName>longitude</destinationName>
    </axisVariable>
    <dataVariable>
        <sourceName>npp</sourceName>
        <destinationName>npp</destinationName>
        <dataType>double</dataType>
        <addAttributes>
            <att name="colorBarMaximum" type="double">1500</att>
            <att name="colorBarMinimum" type="double">0</att>
            <att name="colorBarScale">Linear</att>
            <att name="ioos_category">Ocean Color</att>
            <att name="long_name">Net Primary Productivity</att>
            <att name="standard_name">Primary Productivity</att>
            <att name="Units">null</att>
            <att name="units">mgC m^-2 day^-1</att>
        </addAttributes>
    </dataVariable>
</dataset>
